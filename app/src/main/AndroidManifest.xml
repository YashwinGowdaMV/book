<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booksmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bm"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/bm"
        android:supportsRtl="true"
        android:theme="@style/Theme.BooksMovies">
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".music"
            android:exported="false" />
        <activity
            android:name=".web"
            android:exported="false" />
        <activity
            android:name=".tools"
            android:exported="false" />
        <activity
            android:name=".book_search"
            android:exported="false" />
        <activity
            android:name=".search_movies"
            android:exported="false" />
        <activity
            android:name=".aboutus"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"></activity>
        <activity
            android:name=".SettingsMainActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BooksViewActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MoviesViewActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddBookActivity"
            android:exported="true" />
        <activity
            android:name=".AddMovieActivity"
            android:exported="true" />
        <activity
            android:name=".BookActivity"
            android:exported="true"
            android:parentActivityName=".BooksViewActivity" />
        <activity
            android:name=".MovieActivity"
            android:exported="true"
            android:parentActivityName=".MoviesViewActivity" />
    </application>

</manifest>